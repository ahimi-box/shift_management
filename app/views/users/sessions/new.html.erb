<% provide(:title, "login") %>
<h1>ログイン</h1>
<%# <h2>Log in</h2> %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label-login"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label-login"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name) %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "label-login"  %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <hr>
    <div class="field">
      <p><%= link_to "アカウントをお持ちでない方", new_registration_path(resource_name), class: 'btn btn-success btn-block'%> </p> 
    </div>
    <%# <%= render "users/shared/links"%>   
  </div>
</div>  
