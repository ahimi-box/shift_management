<% provide(:title, 'Forgot your password') %>
<% provide(:class_text, 'Forgot-your-password') %>

<h1>パスワード再設定</h1>
<%# <h2>Forgot your password?</h2> %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        
        <P>入力されたメールアドレスにパスワード再設定メールを送信します。</p>
        <%= f.label :email, class: "label-#{yield(:class_text)}" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%# <%= f.submit "Send me reset password instructions"  %>
        <%= f.submit "送信", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <hr>

     <%# <%= render "users/shared/links" %>  
    <p><%= link_to "ログインへ", new_session_path(resource_name), class: "btn btn-info btn-block btn-login "%></p> 
    <p><%= link_to "アカウントをお持ちでない方", new_registration_path(resource_name), class: 'btn btn-success btn-block' %></p> 
  </div>
</div>



