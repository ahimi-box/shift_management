<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "シフト管理システム", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザ一覧", users_path %></li>
            <li><%= link_to "皆さんにお知らせ", user_administrators_path(current_user) %></li>
            <li><%= link_to "シフト申請一覧", apply_edit_user_shift_path(current_user, current_user, date: @first_day) %></li> 
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if !current_user.admin? %>
                <li><%= link_to "シフト決定", current_user %></li>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
